    /* write to global pop */
    if (INTERFACE_BC_WEST){//w
         g_gGhostX_0[g_idxPopX(ty, tz, 0, bx, by, bz)] = gNode[ 2]; 
         g_gGhostX_0[g_idxPopX(ty, tz, 1, bx, by, bz)] = gNode[ 8];
         g_gGhostX_0[g_idxPopX(ty, tz, 2, bx, by, bz)] = gNode[10];
         g_gGhostX_0[g_idxPopX(ty, tz, 3, bx, by, bz)] = gNode[14];
         g_gGhostX_0[g_idxPopX(ty, tz, 4, bx, by, bz)] = gNode[16];
    }if (INTERFACE_BC_EAST){//e
         g_gGhostX_1[g_idxPopX(ty, tz, 0, bx, by, bz)] = gNode[ 1];
         g_gGhostX_1[g_idxPopX(ty, tz, 1, bx, by, bz)] = gNode[ 7];
         g_gGhostX_1[g_idxPopX(ty, tz, 2, bx, by, bz)] = gNode[ 9];
         g_gGhostX_1[g_idxPopX(ty, tz, 3, bx, by, bz)] = gNode[13];
         g_gGhostX_1[g_idxPopX(ty, tz, 4, bx, by, bz)] = gNode[15];   
    }

    if (INTERFACE_BC_SOUTH){//s          
         g_gGhostY_0[g_idxPopY(tx, tz, 0, bx, by, bz)] = gNode[ 4];
         g_gGhostY_0[g_idxPopY(tx, tz, 1, bx, by, bz)] = gNode[ 8];
         g_gGhostY_0[g_idxPopY(tx, tz, 2, bx, by, bz)] = gNode[12];
         g_gGhostY_0[g_idxPopY(tx, tz, 3, bx, by, bz)] = gNode[13];
         g_gGhostY_0[g_idxPopY(tx, tz, 4, bx, by, bz)] = gNode[18];
    }if (INTERFACE_BC_NORTH){//n
         g_gGhostY_1[g_idxPopY(tx, tz, 0, bx, by, bz)] = gNode[ 3];
         g_gGhostY_1[g_idxPopY(tx, tz, 1, bx, by, bz)] = gNode[ 7];
         g_gGhostY_1[g_idxPopY(tx, tz, 2, bx, by, bz)] = gNode[11];
         g_gGhostY_1[g_idxPopY(tx, tz, 3, bx, by, bz)] = gNode[14];
         g_gGhostY_1[g_idxPopY(tx, tz, 4, bx, by, bz)] = gNode[17];
    }
    
    if (INTERFACE_BC_BACK){ //b
         g_gGhostZ_0[g_idxPopZ(tx, ty, 0, bx, by, bz)] = gNode[ 6];
         g_gGhostZ_0[g_idxPopZ(tx, ty, 1, bx, by, bz)] = gNode[10];
         g_gGhostZ_0[g_idxPopZ(tx, ty, 2, bx, by, bz)] = gNode[12];
         g_gGhostZ_0[g_idxPopZ(tx, ty, 3, bx, by, bz)] = gNode[15];
         g_gGhostZ_0[g_idxPopZ(tx, ty, 4, bx, by, bz)] = gNode[17];
    }if (INTERFACE_BC_FRONT){
         g_gGhostZ_1[g_idxPopZ(tx, ty, 0, bx, by, bz)] = gNode[ 5];
         g_gGhostZ_1[g_idxPopZ(tx, ty, 1, bx, by, bz)] = gNode[ 9];
         g_gGhostZ_1[g_idxPopZ(tx, ty, 2, bx, by, bz)] = gNode[11];
         g_gGhostZ_1[g_idxPopZ(tx, ty, 3, bx, by, bz)] = gNode[16];
         g_gGhostZ_1[g_idxPopZ(tx, ty, 4, bx, by, bz)] = gNode[18];
    }