        #endif //D3Q27       
    }

    if (INTERFACE_BC_SOUTH){//s          
        gGhost.Y_0[idxPopY(tx, tz, 0, bx, by, bz)] = pop[ 4];
        gGhost.Y_0[idxPopY(tx, tz, 1, bx, by, bz)] = pop[ 8];
        gGhost.Y_0[idxPopY(tx, tz, 2, bx, by, bz)] = pop[12];
        gGhost.Y_0[idxPopY(tx, tz, 3, bx, by, bz)] = pop[13];
