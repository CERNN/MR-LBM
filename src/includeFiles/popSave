        gGhost.Y_0[idxPopY(tx, tz, 6, bx, by, bz)] = pop[22];
        gGhost.Y_0[idxPopY(tx, tz, 7, bx, by, bz)] = pop[23];
        gGhost.Y_0[idxPopY(tx, tz, 8, bx, by, bz)] = pop[26];
        #endif //D3Q27
    }if (INTERFACE_BC_NORTH){//n
        gGhost.Y_1[idxPopY(tx, tz, 0, bx, by, bz)] = pop[ 3];
        gGhost.Y_1[idxPopY(tx, tz, 1, bx, by, bz)] = pop[ 7];
        gGhost.Y_1[idxPopY(tx, tz, 2, bx, by, bz)] = pop[11];
