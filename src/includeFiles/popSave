        gGhost.Y_1[idxPopY(tx, tz, 8, bx, by, bz)] = pop[25];
        #endif //D3Q27
    }
    
    if (INTERFACE_BC_BACK){ //b
        gGhost.Z_0[idxPopZ(tx, ty, 0, bx, by, bz)] = pop[ 6];
        gGhost.Z_0[idxPopZ(tx, ty, 1, bx, by, bz)] = pop[10];
        gGhost.Z_0[idxPopZ(tx, ty, 2, bx, by, bz)] = pop[12];
