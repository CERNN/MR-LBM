    /* write to global pop */
    if (INTERFACE_BC_WEST){//w
        gGhost.X_0[idxPopX(ty, tz, 0, bx, by, bz)] = pop[ 2]; 
        gGhost.X_0[idxPopX(ty, tz, 1, bx, by, bz)] = pop[ 8];
        gGhost.X_0[idxPopX(ty, tz, 2, bx, by, bz)] = pop[10];
